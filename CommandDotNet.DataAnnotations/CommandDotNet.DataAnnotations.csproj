        <PackageTags>dotnet core; console; argument parse; DataAnnotations; validation;</PackageTags>
        <ReleaseNotes>https://commanddotnet.bilal-fazlani.com/releasenotes/commanddotnet.dataannotations/</ReleaseNotes>
    </PropertyGroup>
    <ItemGroup>
        <Compile Remove="output\**" />
    </ItemGroup>
    <ItemGroup>
        <EmbeddedResource Remove="output\**" />
    </ItemGroup>
    <ItemGroup>
        <None Remove="output\**" />
    </ItemGroup>
    <ItemGroup>
        <None Include="..\images\nuget-icon.png" Pack="true" PackagePath="" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\CommandDotNet\CommandDotNet.csproj" />
    </ItemGroup>

</Project>
